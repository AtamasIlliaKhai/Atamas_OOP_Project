<Window x:Class="Atamas_OOP_Project.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню гостя — Tutor Finder" Height="420" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#f0f0f0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Tutor Finder" FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Переглянути репетиторів" Name="BrowseButton"
                    Height="40" Margin="0,0,0,10"
                    Background="#6C757D" Foreground="White" FontSize="16"/>

            <Button Content="Зареєструватися" Name="RegisterButton"
                    Height="40" Margin="0,0,0,10"
                    Background="#28A745" Foreground="White" FontSize="16"/>

            <Button Content="Увійти" Name="LoginButton"
                    Height="40"
                    Background="#007ACC" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>