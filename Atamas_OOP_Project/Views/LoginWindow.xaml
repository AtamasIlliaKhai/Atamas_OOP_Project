<Window x:Class="Atamas_OOP_Project.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Увійти" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#f0f0f0" Margin="0,0,0,-40">
        <StackPanel Margin="20" VerticalAlignment="Center">
            <Button Content="Назад" HorizontalAlignment="Left" Width="60" Click="BackButton_Click"/>
            <TextBlock Text="Вхід" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

            <TextBlock Text="Електронна пошта:" />
            <TextBox Name="EmailTextBox" Margin="0,5" Height="30" />

            <TextBlock Text="Пароль:" />
            <PasswordBox Name="PasswordBox" Margin="0,5" Height="30" PasswordChanged="PasswordBox_PasswordChanged" />

            <!-- Поле для текстового вводу паролю, коли він показується -->
            <TextBox Name="PasswordTextBox" Visibility="Collapsed" Margin="0,5" Height="30" TextChanged="PasswordTextBox_TextChanged" />

            <!-- Кнопка для перемикання видимості паролю -->
            <Button Content="👁️" Width="30" Height="30" HorizontalAlignment="Right" Click="TogglePasswordVisibility" Margin="0,5"/>

            <Button Name="LoginUserButton" Content="Увійти"
                    Height="40" Background="#007ACC" Foreground="White"
                    FontSize="16" Margin="0,20,0,10"/>

            <Button Content="Не маєте акаунту? Зареєструватися"
                    Click="SwitchToRegister_Click"
                    Background="Transparent" BorderBrush="Transparent"
                    Foreground="Blue" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>