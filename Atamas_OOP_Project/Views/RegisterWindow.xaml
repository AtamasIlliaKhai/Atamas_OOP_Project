<Window x:Class="Atamas_OOP_Project.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Зареєструватися" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#f0f0f0">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                <Button Content="Назад" HorizontalAlignment="Left" Width="100" Height="40" Margin="0,0,0,20" Click="BackButton_Click"/>

                <TextBlock Text="Реєстрація" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Ім'я"/>
                        <TextBox Name="FirstNameTextBox" Margin="0,5" Height="30"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Прізвище"/>
                        <TextBox Name="LastNameTextBox" Margin="0,5" Height="30"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Електронна пошта" Margin="0,10,0,0"/>
                <TextBox Name="EmailTextBox" Margin="0,5" Height="30"/>

                <TextBlock Text="Пароль" Margin="0,10,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox Name="PasswordBox" Grid.Column="0" Margin="0,5" Height="30" PasswordChanged="PasswordBox_PasswordChanged"/>
                    <Button Content="👁" Grid.Column="1" Width="30" Height="30" Margin="5,5,0,5" 
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="TogglePasswordVisibility"/>
                </Grid>
                <TextBox Name="PasswordTextBox" Visibility="Collapsed" Margin="0,5" Height="30" TextChanged="PasswordTextBox_TextChanged"/>

                <TextBlock Text="Підтвердіть пароль" Margin="0,10,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox Name="ConfirmPasswordBox" Grid.Column="0" Margin="0,5" Height="30" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    <Button Content="👁" Grid.Column="1" Width="30" Height="30" Margin="5,5,0,5" 
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                            Click="ToggleConfirmPasswordVisibility"/>
                </Grid>
                <TextBox Name="ConfirmPasswordTextBox" Visibility="Collapsed" Margin="0,5" Height="30" TextChanged="ConfirmPasswordTextBox_TextChanged"/>

                <ComboBox Name="RoleComboBox" Margin="0,5" Height="30" SelectedIndex="0">
                    <ComboBoxItem Content="Студент" Tag="Student"/>
                    <ComboBoxItem Content="Викладач" Tag="Tutor"/>
                </ComboBox>

                <Button Name="RegisterUserButton" Content="Зареєструватися"
                        Height="40" Background="#28A745" Foreground="White"
                        FontSize="16" Margin="0,20" Click="RegisterUserButton_Click"
                        FontWeight="Bold"/>

                <Button Content="Вже зареєстровані? Увійти"
                        Click="SwitchToLogin_Click"
                        Background="Transparent" BorderBrush="Transparent"
                        Foreground="#007BFF" FontSize="14" Margin="0,10"
                        HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>